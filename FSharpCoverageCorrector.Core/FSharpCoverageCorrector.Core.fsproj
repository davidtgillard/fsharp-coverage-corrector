<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyTitle>fsharp-coverage-corrector.core</AssemblyTitle>
  </PropertyGroup>

  <!-- Import the common assembly information-->
  <Import Project="..\GlobalInfo\GlobalAssemblyInfo.proj" />

  <PropertyGroup>
    <RollForward>Major</RollForward>
    <WarnOn>3390;$(WarnOn)</WarnOn>
  </PropertyGroup>

  <!-- generate nuget package when building in release mode -->
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\FSharpCoverageCorrector.Core.xml</DocumentationFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <OutputPath>bin\Release</OutputPath>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Types.fs" />
    <Compile Include="Utils.fs" />
    <Compile Include="ProjectInfo.fs" />
    <Compile Include="FSharpSourceLookup.fs" />
    <Compile Include="Corrections\AutogeneratedClasses.fs" />
    <Compile Include="Corrections\BranchCoverage.fs" />
    <Compile Include="IO\Cobertura.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Argu" Version="6.1.1" />
    <PackageReference Include="FSharp.Compiler.Service" Version="40.0.0" />
    <PackageReference Include="FSharpLint.Core" Version="0.21.2" />
    <PackageReference Update="FSharp.Core" Version="5.0.2" />
  </ItemGroup>

</Project>
